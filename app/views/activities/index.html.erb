<div data-role="header">
  <%= link_to "log out", log_out_path, "data-theme"=>"b" %>
  <h1>Unlock Users</h1>
	<%= link_to "Menu", menu_path, "data-theme"=>"b" %>	
</div>

<div data-role="content">
	<ul data-role="listview" data-inset="true" class="custom_list">

		<% @users.each do |user| %>
    		<li>
    			<div class="text_content">
    			<h3><%= user.first_name %> <%= user.surname %></h3>
				<p><%= user.company.company_name %></p>
    			</div>
				<div class="test2">        					
					<span class="ui-li-count" style="color: #FFFFFF; background: #00407f; font-size:11px;"><%= user.licence.number_times_logged_in %></span>
					<% if user.licence.last_sign_in%>
					<span class="ui-li-count" style="color: #FFFFFF; background: #90307f; font-size:11px;"><%= user.licence.last_sign_in.strftime("%e %B %Y") %></span>
					<%end%>
				</div>   			    	    		
			</li>						
		<% end %> 
	</ul>
</div>


